<!DOCTYPE html>
<html>
	<%include ./header.ejs%>
	<body>
		<h1>User update form ejs</h1>
		<form action='/process/update' method='post'>
			<table>
				<tr>
					<th>ID</th>
					<td><input type='text' name='id' readonly="readonly" value="<%=result[0].id%>"></td>
				</tr>
				<tr>
					<th>Name</th>
					<td><input type="text" name="name" value="<%=result[0].name%>"></td>
				</tr>
				<tr>
					<th>Age</th>
					<td><input type="text" name="age" value="<%=result[0].age%>"></td>
				</tr>
				<tr>
					<th>Password</th>
					<td><input type="text" name="password" value="<%=result[0].password%>"></td>
				</tr>
			</table>
			<input type="submit" value="update">
		</form>
		<%include ./footer.ejs%>
	</body>
</html>